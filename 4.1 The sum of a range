function range(start,end,step) {
  var array = [];
  if (step) {
    if (step>0) {
      while (start <= end) {
        array.push(start);
        start=start+step;
      }
    }
    else {
      while (start >= end) {
        array.push(start);
        start=start+step;
      }
    }
  }
  else {
     while (start <= end) {
      array.push(start);
      start++;
     }
  }
  return array;
}

function sum(array) {
  var sum = 0;
  for (i=0; i<array.length; i++)
    sum = sum + array[i];
  return sum;
}

console.log(sum(range(10,1,-1)));
// 55
console.log(range(6,2,-1));
// [6, 5, 4, 3, 2]
console.log(range(2,5));
// [2, 3, 4, 5]
console.log(range(2,5,2));
// [2, 4]
console.log(range(2,5,-1));
// []
